= form_for @manager do |f|
  -if @manager.errors.any?
    #error_explanation
      %h2= "#{pluralize(@manager.errors.count, "error")} prohibited this manager from being saved:"
      %ul
        - @manager.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :manager_name
    = f.text_field :manager_name
  .field
    = f.label :manager_id
    = f.text_field :manager_id
  .field
    = f.label :password
    = f.text_field :password
  .actions
    = f.submit 'Save'
